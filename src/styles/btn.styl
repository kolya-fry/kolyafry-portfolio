button 
    border none
    padding 12px 30px
    color white
    cursor pointer
    border-radius 4px
    transition background .3s, color .3s;

.btn--add
    background orange
    font-size: 24px

.btn--add:hover 
    background: #ff8436;

.btn--delete
    background-color red
    color #fff
    border-radius 50%
    width 30px
    height 30px
    display block